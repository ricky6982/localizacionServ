div(class="modal fade", id="itemModal", tabindex="-1", role="dialog", aria-labelledby="MyModalLabel")
    div(class="modal-dialog", role="document")
        div(class="modal-content")
            div(class="modal-header")
                button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                h4(class="modal-title") Nuevo Item para el Servicio
            div(class="modal-body form-horizontal")
                div(class="form-group")
                    label(class="col-sm-3 control-label") Nombre
                    div(class="col-sm-6")
                        input(type="text", class="form-control", ng-model="itemModal.nombre")
                div(class="form-group")
                    label(class="col-sm-3 control-label") Descripci√≥n
                    div(class="col-sm-6")
                        input(type="text", class="form-control", ng-model="itemModal.descripcion")
                input(type="hidden", ng-model="itemModal.servicio")
            div(class="modal-footer")
                button(type="button", class="btn btn-primary", data-dismiss="modal", ng-click="item.guardar()") Guardar
                button(type="button", class="btn btn-default", data-dismiss="modal") Cerrar