div(class="modal fade", id="servicioModal", tabindex="-1", role="dialog", aria-labelledby="MyModalLabel")
    div(class="modal-dialog", role="document")
        div(class="modal-content")
            div(class="modal-header")
                button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                h4(class="modal-title") Nuevo Servicio
            div(class="modal-body form-horizontal")
                div(class="form-group")
                    label(class="col-sm-3 control-label") Nombre:
                    div(class="col-sm-6")
                        input(type="text", class="form-control", ng-model="servicioModal.nombre")
            div(class="modal-footer")
                button(type="button", class="btn btn-default", data-dismiss="modal") Cerrar
                button(type="button", class="btn btn-primary", data-dismiss="modal", ng-click="servicio.nuevo()") Guardar