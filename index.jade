extends layout.jade

block javascripts
    script(src="js/app.js")
    script(src="js/directives.js")
    script(src="js/appCtrl.js")
    script(src="js/_servicioCtrl.js")
    script(src="js/_localizacionCtrl.js")
    script(src="js/_networkCtrl.js")
    script(src="js/_redTerminalValores.js")
    script(src="js/_redTerminal.js")

block objetivo
    include objetivo.jade

block contenido
    div
        ul(class="nav nav-tabs")
            li(class="active")
                a(href="#servicios", data-toggle="tab") Servicios
            li
                a(href="#localizacion", data-toggle="tab") Localizaci√≥n de Servicios

        div(class="tab-content")
            div(class="tab-pane active", id="servicios", ng-controller="ServicioCtrl")
                include partials/servicios.jade
                include partials/servicioModal.jade
                include partials/itemModal.jade
            div(class="tab-pane", id="localizacion", ng-controller="LocalizacionCtrl")
                div(class="row")
                    include partials/localizacion/control.jade
                    include partials/localizacion/network.jade
    

    div(class="row", style="margin-top: 30px;")
        pre
            legend Modelo
            | {{ guiLugares | json }}
        pre
            legend Modelo
            | {{ listadoServicios | json }}